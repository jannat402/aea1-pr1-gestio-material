<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Regles personalitzades"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0
                             http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        Conjunt de regles bàsiques per millorar la qualitat del codi Java en pràctiques educatives.
    </description>

    <!-- Regla 1: Evita variables locals no utilitzades -->
    <rule ref="category/java/bestpractices.xml/UnusedLocalVariable"/>

    <!-- Regla 2: Evita blocs catch buits -->
    <rule ref="category/java/errorprone.xml/EmptyCatchBlock"/>

    <!-- Regla 3: Comprova convencions de noms de classes -->
    <rule ref="category/java/naming.xml/ClassNamingConventions"/>
</ruleset>
